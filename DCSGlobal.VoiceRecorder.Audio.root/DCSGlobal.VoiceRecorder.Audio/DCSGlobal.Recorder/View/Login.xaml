<Window x:Class="DCSGlobal.Recorder.View.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="300" Width="300">
    <Grid>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Height="23" Margin="64,40,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162"/>
        <TextBox x:Name="txtPasswd" HorizontalAlignment="Left" Height="23" Margin="64,76,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="162"/>
        <Label x:Name="lblLogin" Content="Login" HorizontalAlignment="Left" Margin="19,0,0,0" VerticalAlignment="Top" FontSize="18"/>
        <Label x:Name="lblUserName" Content="User Name" Margin="0,40,0,0" VerticalAlignment="Top" HorizontalAlignment="Left"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="8,76,0,0" VerticalAlignment="Top"/>
        <Label x:Name="lblError" Content="" HorizontalAlignment="Left" Margin="19,148,0,0" VerticalAlignment="Top" Foreground="Red"/>
        <Button x:Name="cmdLogin" Content="Login" HorizontalAlignment="Left" Margin="151,114,0,0" VerticalAlignment="Top" Width="75" Click="cmdLogin_Click"/>

    </Grid>
</Window>
